{
    "manifest_version": 2,

    "name": "Upadtr",
    "short_name": "Upadtr",
    "description": "Keep up to date.",
    "version": "0.0.1",

    "icons": {
        "16": "assets/img/icon-16.png",
        "32": "assets/img/icon-32.png",
        "48": "assets/img/icon-48.png",
        "128": "assets/img/icon-32.png"
    },

    "permissions": [
        "http://*/",
        "https://*/"
    ],

    "background": {
        "scripts": ["chrome-button.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "assets/img/icon-128.png",
        "default_title": "Open Updatr"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
